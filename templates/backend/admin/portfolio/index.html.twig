{% extends 'admin.html.twig' %}

{% block title %} Tableau de bord {% endblock %}

{% block navigation %}
    <!-- Include Navigation + Messages flash -->
    {% include 'backend/admin/partials/header-dashboard.html.twig' %}

{% endblock %}

{% block body %}

    <section class="dasboard-page-background">
        <div id="wrapper">

            <!-- Include Navigation Sidebar -->
            {% include 'backend/admin/partials/sidebar-dashboard.html.twig' %}

            <!-----------------------  Page content ------------------------------->

            <div id="page-content-wrapper" class="dashboard">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="container text-center">
                                <h1 class="pb-3 text-center mb-2 mt-3"> Gestion du Portfolio </h1>
                                <a href="{{ path('admin_work_create') }}" class="btn add_project_btn"> Ajouter un nouveau projet </a>

                                <div class="row">
                                    <div class="card-deck">
                                        {% for work in works %}
                                        <div class="col-md-3 cards-home mb-4 px-1">
                                            <div class="card">
                                                <img src=" /../../uploads/images/{{ work.image }}" alt="" class="img-fluid card-img-top" />
                                                <div class="card-body card-portfolio-background">
                                                    <a href="{{ path('admin_work_delete', {id: work.id}) }}"> <i class="fas fa-times"></i> Supprimer </a>
                                                </div>
                                            </div>
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

{% endblock %}
























