{% extends 'base.html.twig' %}

{% block title %}Connexion au site {% endblock %}

{%  block navigation %}
    {% include 'partials/header-blog.html.twig' %}
{% endblock %}

{% block body %}

    <section class="login-section">
        <div class="container form-login-container">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="py-3 px-3 form-login">
                        <h1 class="form-login-title"> Connexion </h1>

                        {% if hasError %}
                        <div class="alert alert-danger error-message-login"> Erreur : le nom d'utilisateur ou le mot de passe est invalide. </div>
                        {% endif %}

                        <form action="{{ path('account_login') }}" method="post" class="login-page-form">
                            <div class="form-group">
                                <label for="email" class="d-none"> Email </label>
                                <input type="text" name="_username" id="email" class="form-control input-form-login" placeholder="Email" required value="{{ username }}">
                            </div>
                            <div class="form-group">
                                <label for="password" class="d-none"> Mot de passe </label>
                                <input type="password" name="_password" id="password" placeholder="Mot de passe" class="form-control input-form-login" required>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn ask-button button-form-login"> Connexion </button>
                                <p class="dont-have-account-text"> Vous n'avez pas encore de compte ? <a href="{{ path("account_register") }}"> Inscrivez-vous </a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
