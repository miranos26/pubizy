{% extends 'base.html.twig' %}


{% block title %} Modification du mot de passe {% endblock %}

{%  block navigation %}
    {% include 'partials/header-account.html.twig' %}
{% endblock %}

{% block body %}


    <div class="container">
        <div class="col-md-12 text-center mb-5">
            <h1 class="account_edit_title"> Modifier mon mot de passe </h1>
        </div>

        {{ form_start(form) }}

        <div class="col-md-6 mx-auto">
            <div class="col-md-12">
                {{ form_row(form.oldPassword) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.newPassword) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.confirmPassword) }}
            </div>

            <div class="col-md-12 text-center mt-4 mb-5">
                <button type="submit" class="btn btn-skills"> Enregistrer </button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>


{% endblock %}