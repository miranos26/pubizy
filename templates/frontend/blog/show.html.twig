{% extends 'base.html.twig' %}

{%  block navigation %}
    {% include 'partials/header-blog.html.twig' %}
{% endblock %}

{% block title %} Blog (Astuces graphisme, impression, communication, sites internet) {% endblock %}


{% block body %}

    <!-- PAGE HEADER -->
    <header class="pageHeaderBlog">
        <div class="container">
            <div class="row">
                <div class="col-md-6 m-auto text-center">
                    <h1 class="Title-Homepage-blog mt-4"> {{ post.title }} </h1>
                </div>
            </div>
        </div>
    </header>

    <section id="article-blog" class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="mt-4 mb-2 article-title"> {{ post.title }} </h1>
                    <p class="underline"> Publié le {{ post.createdAt | date('d/m/Y') }} à {{ post.createdAt | date('H:i') }} </p>
                    <p class="my-5"> {{ post.content }}</p>

                </div>

                <div class="col-md-6">
                    <img src="{{ asset(post.image) }}" alt="image article" class="img-fluid rounded-circle d-none d-md-block articles-img">
                </div>
            </div>
        </div>
    </section>




{% endblock %}
